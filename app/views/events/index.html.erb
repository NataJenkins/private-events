<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% past = Array.new %>
    <% future = Array.new %>
    <% @events.each do |event| %>

      <% if event.date > Time.zone.now %>
        <% future.push(event) %>
      <% else %>
        <% past.push(event) %>
      <% end %>
    <% end %>

    <% past.each do |shark| %>
      <tr>
          <td><%= shark.date %></td>
          <td><%= link_to 'Show', shark %></td>
          <td>Past</td>

      </tr>
    <% end %>


        <% future.each do |shark| %>
        <tr>
          <td><%= shark.date %></td>
          <td><%= link_to 'Show', shark %></td>
          <td>Future</td>
        </tr>
        <% end %>
  </tbody>
</table>

