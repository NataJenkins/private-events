<%= @user.email %>

<% @event.each do |user|%>
  <tr>
    <% if user.creator_id == current_user.id %>
      <% if user.date > Time.zone.now %>
        <p> Future </p>
      <% else %>
        <p> Past </p>
      <% end %>

      <p><%= user.date %></p>

    <% else %>
      <p></p>
    <% end %>
  </tr>
<% end %>
<%= link_to 'Back', root_path %>
